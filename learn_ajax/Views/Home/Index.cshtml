

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>learn ajax</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        function funcBefore() {
            $('#information').text('Data is loading');
        };

        function funcSuccess(data) {
            $('#information').text(data);
        };

        $(document).ready(function () {
            $('#load').bind('click', function () {
                $.ajax({
                    url: '/api/values/',
                    type: 'GET',
                    data: ({
                        Name: "admin",
                        Number: 52
                    }),
                    beforeSend: funcBefore,
                    success: funcSuccess 
                });
            });

            $('#done').bind('click', function () {
                $.ajax({
                    url: '/api/values/',
                    type: 'GET',
                    data: ({
                        Name: $('#name').val()
                    }),
                    beforeSend: funcBefore,
                    success: function (data) {
                        if (data == "Fail") {
                            alert("name taken");
                        }
                        else {
                            $('#information').text(data);
                        }
                    }
                });
            });
        });

    </script>

</head>
    <body>
        <input id="name" type="text" placeholder="Write your name" />
        <input id="done" type="button" value="Enter" />

        <p id="load" style="cursor: pointer">Load data</p>

        <div id="information">

        </div>

    </body>
</html>



